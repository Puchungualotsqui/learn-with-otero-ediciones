package assignment

import (
	"frontend/dto"
)

templ StudentSubmissionSlot(s dto.Submission) {
	<div class="p-3 border rounded-lg hover:bg-gray-50 cursor-pointer"
		hx-get={"/submission/detail?id=" + strconv.Itoa(s.Id)}
		hx-target="#submission-detail"
		hx-swap="innerHTML">
		<p class="font-medium truncate">Estudiante #{ s.StudentId }</p>
		<p class="text-xs text-gray-500">{ s.SubmittedAt }</p>
	</div>
}
