package assignment

import (
	"frontend/dto"
	"strconv"
)

templ StudentSubmissionSlot(classId int, assignmentId int, s dto.Submission) {
	<div class="p-3 border rounded-lg hover:bg-gray-50 cursor-pointer"
		hx-get={"/" + strconv.Itoa(classId) + "/asignaciones/" + strconv.Itoa(assignmentId) + "/submissions/detail?id=" + s.Username}
		hx-target="#submission-detail"
		hx-swap="innerHTML">
		<p class="font-medium truncate text-gray-900">{ s.Username }</p>
		<p class="text-xs text-gray-500">{ s.SubmittedAt }</p>
	</div>
}
